<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <template id="job_list" name="Job List">


        <t t-call="website.layout">
            <title style="color: #233835;">
                Job List
            </title>

            <div class="oe_structure"/>

            <div class="oe_structure">
                <div style="margin-left:6%;margin-right:4%;">

                    <br/>

                    <div class="row">
                        <h3 style="color: #233835;">Filter</h3>
                        <div class="col-lg-3">
                            <t t-call="recruitment_website.my_categoiry" t-set="departments"/>
                            <t t-call="recruitment_website.employment_type" t-set="contracts"/>
                        </div>

                        <div class="col-lg-9">
                            <div class="row">
                                <h3 style="color: #233835;">All Job List</h3>
                                <t t-if="jobs and jobs[0].open_job_count > 0">
                                    <div class="text-muted" style="color: #233835;">
                                        (<t t-esc="jobs[0].open_job_count"/>) open jobs
                                    </div>
                                </t>
                                <t t-foreach="jobs" t-as="job">
                                    <div class="col-lg-6 p-1">
                                        <div class="card m-auto">
                                            <div class="card-body">
<!--                                                 style="color: #233835;"-->
                                                <h5 class="card-subtitle mb-2" style="color: #FEBC11;"><t t-esc="job.name"/></h5>
                                                <p class="card-text">
                                                    <h6 class="card-subtitle mb-2 text-muted">
                                                        <i class="fa fa-map-marker"> <t t-esc="job.location"/></i>
                                                    </h6>
                                                </p>
                                                <a t-attf-href="/job/detail/{{job.id}}" class="card-link" style="color: #FEBC11">Read more</a>
                                            </div>

                                        </div>

                                    </div>
                                </t>
                            </div>
                        </div>
                        <br/>
                    </div>
                    <div class="row" style="text-align: center;  background-color: #F1F1F1;margin-top:3%; padding-top:2%;">
                        <h4 style="color: #233835" class="">Submit your Application</h4>
                        <p class="">​We are always looking for bright minds and enthusiastic people from diverse backgrounds, who want to be part of an outstanding team.<br/>Even if you don’t find a suitable position below, please do not hesitate to drop us your resume.
                        <br/><a class="btn btn-success" t-attf-href="/apply/default/" style="color:#ffffff; border:none; background-color: #FEBC11; width:80px;margin: 20px;text-align: center;">Apply</a>
                        </p>
                    </div>

                </div>


            </div>
        </t>
    </template>


