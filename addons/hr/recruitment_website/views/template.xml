                                    <p>
                                        <t t-esc="job.description" widget="html"/>
                                    </p>
                                </t>
<!--                                <t t-if="job.qualification or job.skill != Null">-->
<!--                                    <b>Requirement:</b>-->
<!--                                    <p>-->
<!--                                        <t t-esc="job.qualification" widget="html"/>-->
<!--                                    </p>-->
<!--                                    <p>-->
<!--                                        <t t-esc="job.skill" widget="html"/>-->
<!--                                    </p>-->
<!--                                </t>-->
                                <a class="btn btn-success" t-attf-href="/apply/{{slug(job)}}" style="color:#ffffff; border:none; background-color: #FEBC11">Apply</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- ShareThis BEGIN -->
<!--            <div class="sharethis-inline-share-buttons">-->
<!--                <h1>Test</h1>-->
<!--            </div>-->
            <!-- ShareThis END -->
        </t>
    </template>


    <template id="job_apply" name="Job Application">

        <t t-call="website.layout">

            <title style="color: #233835;">
                Apply
            </title>

            <div class="oe_structure"/>

            <div class="oe_structure">

                <div class="container p-2">


                    <h3 style="color: #233835;">Application Form</h3>
                    <h5 style="color: #FEBC11;">Job Position:
                        <t t-esc="job.name"/>
                    </h5>
                    <div class="card p-2">
                        <form id="application_form" role="form" action="/apply/job_position" method="POST"
                              enctype="multipart/form-data">
                            <p class="text-danger">(*) = Mandatory field</p>
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <!--            <label for="applicantname">Apply For <t t-esc="job.name" /> </label>-->

                                <input type="hidden" t-attf-class="form-control" name="department_id"
                                       t-att-value="job.category"/>
                                <input type="hidden" t-attf-class="form-control" name="recruitment_job_id"
                                       t-att-value="job.id"/>
                                <input type="hidden" t-attf-class="form-control" name="job_name"
                                       t-att-value="job.name"/>
                                <!--                     <input type="hidden"  t-attf-class="form-control" name="company_id" t-att-value="job.company_name.id" />-->
                                <input type="hidden" t-attf-class="form-control" name="stage_id" value="1"/>
                                <!--            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                            </div>

                            <h5 style="color:#233835;">
                                1,  Basic Information Section
                            </h5>
                            <div class="row rounded border border-dark p-1">


                                <div class="col-lg-6">
                                    <div class="form-group py-1">
                                        <label>Full Name(*)</label>
                                        <input type="text" t-attf-class="form-control" name="applicant_name"
                                               id="applicant_name" required="True" placeholder="Full Name"/>
                                    </div>
                                    <div class="form-group py-2">
                                        <label>Email(*)</label>
                                        <input type="text" t-attf-class="form-control" name="email" id="email"
                                               required="True" placeholder="Email"/>
                                    </div>

                                    <div class="form-group py-1">
                                        <label for="language">Select language skill(*)</label>
                                        <br/>
                                        <select class="selectpicker col-12" id="language" name="language"
                                                required="True" multiple="multiple" data-live-search="true">

                                            <t t-foreach="language_list" t-as="language">

                                                <option t-att-value="language.id">
                                                    <t t-esc="language.name"/>
                                                </option>
                                            </t>
                                        </select>

                                        <p class="px-1 py-2">If you want to add other language that you can speak, write
                                            and listen please write here
                                        </p>
                                        <input type="text" class="form-control" name="other_language"
                                               placeholder="Other Languages"/>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group py-2">
                                        <label for="education">Gender(*)</label>
                                        <select class="form-control" name="gender" required="True">
                                            <option value="">Select Your Gender</option>
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>


                                        </select>
                                    </div>

                                    <div class="form-group py-2">
                                        <label>Phone No:(*)</label>
                                        <input type="text" t-attf-class="form-control" name="phone" id="phone"
                                               required="True" placeholder="Phone Number"/>
                                    </div>

                                    <div class="form-group py-2">
                                        <label>Second Phone No.</label>
                                        <input type="number" t-attf-class="form-control" name="phone_two" id="phone_two"
                                               placeholder="Second Phone Number "/>
                                    </div>

                                    <div class="form-group py-2">
                                        <label>Living Address(*)</label>
                                        <input type="text" t-attf-class="form-control" name="living_address"
                                               id="living_address" placeholder="e.g. bole: Addis Ababa: Ethiopia"
                                               required="True"/>
                                    </div>
                                </div>

                            </div>

                            <br/>
                             <h5 style="color: #233835;"> 2,  Experience Section </h5>

                            <div class="row border border-dark p-2">


                                <div class="form-group py-3">
                                    <label for="education">Total Year of Experience( Start From Recent)</label>
                                    <select class="form-control" name="experience_year" required="True"
                                            data-live-search="true">
                                        <option value="">Select Year of experience</option>

                                        <t t-foreach="experiences" t-as="experience">
                                            <option t-att-value="experience.id">
                                                <t t-esc="experience.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>

                                <p>Please fill the field if you have directly related experience for the position</p>

                                <div id="experiences_container">

                                    <div id="experiences_list"></div>
                                    <button type="button" id="add_experience_button" class="btn btn-secondary" style="color:#ffffff; border:none; background-color: #FEBC11">Add
                                        Experience
                                    </button>
                                </div>
                            </div>


                            <br/>
                            <h5 style="color:#233835;">3, Education Background Section</h5>
                            <div class="row border border-dark p-1">

                                <p>Please fill your education background</p>

                                <div id="education_container">

                                    <div id="education_list"></div>
                                    <button type="button" id="add_education_button" class="btn btn-secondary" style="color:#ffffff; border:none; background-color: #FEBC11">Add
                                        Education
                                    </button>
                                </div>
                            </div>

                            <br/>

                           <h5 style="color:#233835;">4, Application Information</h5>
                            <div class="row border border-dark p-2">


                                <div class="col-lg-6">
                                    <div class="form-group py-2">
                                        <label for="reason">Select reason for seeking the job(*)</label>
                                        <select class="form-control" name="reason" required="True"
                                                data-live-search="true">
                                            <option value="">Select the reason</option>

                                            <t t-foreach="reasons" t-as="reason">
                                                <option t-att-value="reason.id">
                                                    <t t-esc="reason.name"/>
                                                </option>
                                            </t>


                                        </select>
                                    </div>


                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group py-2">
                                        <label for="education">Availability Within(*)</label>
                                        <select class="form-control" name="availability" data-live-search="true">
                                            <option value="">Select Your Availability</option>
                                            <t t-foreach="availabilities" t-as="availability">
                                                <option t-att-value="availability.id">
                                                    <t t-esc="availability.name"/>
                                                </option>
                                            </t>


                                        </select>
                                    </div>
                                </div>


                                <div class="col-lg-8">
                                    <div class="form-group py-3">
                                        <label for="coverletter">Cover Letter</label>
                                        <textarea class="form-control" name="application_summary"
                                                  id="application_summary" rows="3"></textarea>
                                    </div>

                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group py-2">
                                        <label>Resume file(*)
                                            <p>CV Format is PDF or WORD file format</p>
                                        </label>

                                        <input class="form-control btn-primary" type="file" name="att"
                                               multiple="true" accept=".docx,.pdf" data-show-upload="true"
                                               data-show-caption="true" data-show-preview="true"
                                               style="color:#ffffff; border:none; background-color: #FEBC11"
                                               required="True"/>
                                    </div>
                                </div>


                                <div class="col-lg-6">
                                    <div class="form-group py-2">
                                        <label>Expected salary package(ETB)(*)</label>
                                        <select class="form-control" id="expected_salary" name="expected_salary"
                                                required="True" data-live-search="true">
                                            <option value="">Select salary package</option>
                                            <t t-foreach="salaries" t-as="salary">
                                                <option t-att-value="salary.id">
                                                    <t t-esc="salary.name"/>
                                                </option>
                                            </t>
                                        </select>

                                    </div>

                                    <div class="form-group">
                                        <p>If you select hourly rate please fill the hourly amount</p>


                                        <input type="Number" id="hourly_rate_amount" name="hourly_rate_amount"
                                               class="form-control" placeholder="Hourly Rate Amount"/>

                                    </div>

                                </div>
                                <div class="col-12">
                                    <div class="form-group py-1">
                                        <label>Expected benefit(*)</label>
                                        <select class="selectpicker col-12" id="expected_benefit"
                                                name="expected_benefit" required="True" multiple="multiple"
                                                data-live-search="true">

                                            <t t-foreach="benefits" t-as="benefit">
                                                <option t-att-value="benefit.id">
                                                    <t t-esc="benefit.name"/>
                                                </option>
                                            </t>
                                        </select>

                                    </div>


                                </div>
                            </div>


                            <br/>
                            <input type="hidden" id="experiences" name="experiences"/>
                            <input type="hidden" id="educations" name="educations"/>
                            <button type="submit"  t-attf-class="btn btn-success btn-lg"  style="color:#ffffff; border:none; background-color: #FEBC11">Apply</button>
                        </form>
                        <br/>
                        <br/>
                        <br/>
                    </div>
                </div>
            </div>


            <script>
                $('select').selectpicker();
                document.addEventListener('DOMContentLoaded', function () {
                const experiencesList = document.getElementById('experiences_list');
                const addExperienceButton = document.getElementById('add_experience_button');
                const experiencesInput = document.getElementById('experiences');
                let experiences = JSON.parse(localStorage.getItem('experiences')) || [];
                <!--                    calculateTotalExperience();-->


                const educationList = document.getElementById('education_list');
                const addEducationButton = document.getElementById('add_education_button');
                const educationsInput = document.getElementById('educations');
                let educations = JSON.parse(localStorage.getItem('educations')) || [];

                function renderExperiences() {
                experiencesList.innerHTML = '';
                experiences.forEach((experience, index) => {
                const experienceDiv = document.createElement('div');
                experienceDiv.classList.add('experience-item');
                experienceDiv.innerHTML = `
                <!--                                <div class="form-group">-->
                <!--                                    <label>Company Name</label>-->
                <!--                                    <input type="text" class="form-control" value="${experience.company_name}" data-index="${index}" data-field="company_name"/>-->
                <!--                                </div>-->
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Company Name</label>
                            <input type="text" class="form-control" value="${experience.comp_name}"
                                   data-index="${index}" data-field="comp_name"/>
                        </div>
                        <div class="form-group">
                            <label>Job Title</label>
                            <input type="text" class="form-control" value="${experience.exp_position_name}"
                                   data-index="${index}" data-field="exp_position_name"/>
                        </div>

                        <div class="form-group">
                            <label>Location</label>
                            <input type="text" class="form-control" value="${experience.comp_location}"
                                   data-index="${index}" data-field="comp_location"/>
                        </div>

                        <div class="form-group py-2">
                            <label for="frequency">Select Payment Frequency</label>
                            <select class="form-control" id="payment_frequency" name="payment_frequency"
                                    data-index="${index}" data-field="payment_frequency">
                                <option value="">Select payment frequency</option>
                                <option value="hour">Hour</option>
                                <option value="day">Day</option>
                                <option value="week">Week</option>
                                <option value="month">Month</option>
                                <option value="year">Year</option>

                            </select>
                        </div>


                        <div class="form-group">
                            <label>Hired Date</label>
                            <input type="date" class="form-control" value="${experience.exp_start_date}"
                                   data-index="${index}" data-field="exp_start_date"/>
                        </div>


                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Current Salary</label>
                            <input type="text" class="form-control" value="${experience.exp_salary}"
                                   oninput="this.value = this.value.replace(/[^0-9.]/g, '')"
                                   data-index="${index}" data-field="exp_salary"/>
                        </div>


                        <div class="form-group py-2">
                            <label>Current Benefit</label>
                            <input type="text" class="form-control" name="emp_benefit" placeholder="Benefit"
                                   data-index="${index}" data-field="emp_benefit"/>

                        </div>


                        <div class="form-group py-2">
                            <label for="currency">Select Currency Type</label>
                            <select class="form-control" name="exp_currency" data-index="${index}"
                                    data-field="exp_currency" data-live-search="true">
                                <option value="">Select Currency</option>
                                <t t-foreach="currencies" t-as="currency">
                                    <option t-att-value="currency.id">
                                        <t t-esc="currency.name"/>
                                    </option>
                                </t>

                            </select>
                        </div>


                        <div class="form-group py-2">
                            <label for="industry">Select Industry Type</label>
                            <select class="form-control" name="industry_id" data-index="${index}"
                                    data-field="industry_id" data-live-search="true">
                                <option value="">Select Industry</option>
                                <t t-foreach="industries" t-as="ind">
                                    <option t-att-value="ind.id">
                                        <t t-esc="ind.name"/>
                                    </option>

                                </t>
                            </select>
                        </div>


                        <div class="form-group rounded border border-dark p-3">
                            <p>Currently, If you are not working here, please add end date</p>
                            <label>End Date</label>
                            <input type="date" class="form-control" value="${experience.end_date}" data-index="${index}"
                                   data-field="end_date"/>
                        </div>


                    </div>


                </div>

