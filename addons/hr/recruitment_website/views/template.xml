            <div class="oe_structure">
                <div style="margin-left:6%;margin-right:4%;">
                    <!--            <br />-->

                    <div class="row">
                        <div class="col-lg-3">

                            <t t-call="recruitment_website.my_categoiry" t-set="departments"/>
                            <t t-call="recruitment_website.employment_type" t-set="contracts"/>

                        </div>

