<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="accounting_report_view_mode" model="ir.ui.view">
        <field name="name">Accounting Report</field>
        <field name="model">account.common.report</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_common_report_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='check_report']" position="before">
                <button name="check_report_html" string="Preview" type="object" default_focus="1"
                    class="oe_highlight" data-hotkey="q" />
                <button name="check_report_excel" string="Excel" type="object" default_focus="1"
                    class="oe_highlight" data-hotkey="q" />
            </xpath>
        </field>
    </record>

